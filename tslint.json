{
  "extends": [
    "tslint:recommended",
    "tslint-config-airbnb",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/*/.ts",
      "*.json",
      "**/*.json"
    ]
  },
  "rules": {
    "variable-name": [true, "allow-pascal-case"],
    "import-name": [false],
    "no-console": [true, "log", "error"],
    "prettier": [true,
      {
        "endOfLine": "auto",
        "singleQuote": true,
        "tabWidth": 4,
        "useTabs": true
      }]
  }
}